<Page x:ConnectionId='1'
    x:Class="Eggman_OS_Windows_10_Edition.Install_Screen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"                     >

    <RelativePanel Background="#B2BB0606">
        <Image x:ConnectionId='2' x:Name="Installpic" RelativePanel.Above="Actionlbl"  RelativePanel.AlignTopWithPanel="True" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Source="Assets/chao1.jpg" Visibility="Collapsed"/>
        <RelativePanel x:ConnectionId='3' x:Name="Formatpnl" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" Height="200" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True">
            <TextBlock x:ConnectionId='8' x:Name="Formatlbl" Text="Formatting" RelativePanel.AlignHorizontalCenterWithPanel="True" RelativePanel.AlignVerticalCenterWithPanel="True" FontSize="24"                           Margin="0" Padding="0,0,0,10"/>
            <ProgressBar x:ConnectionId='9' x:Name="Formattingbar" RelativePanel.AlignHorizontalCenterWith="Formatlbl" RelativePanel.Below="Formatlbl" Height="50" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" Padding="0" Margin="100,0">
                <ProgressBar.Foreground>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFEC9090" Offset="0"/>
                        <GradientStop Color="#FFF92B0B" Offset="0.447"/>
                        <GradientStop Color="#FFF5B4A0" Offset="0.983"/>
                    </LinearGradientBrush>
                </ProgressBar.Foreground>
            </ProgressBar>
        </RelativePanel>
        <ProgressBar x:ConnectionId='4' x:Name="Installprog" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignBottomWithPanel="True" Height="50" Margin="30,10,30,50" Padding="0">
            <ProgressBar.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFEC9090" Offset="0"/>
                    <GradientStop Color="#FFF92B0B" Offset="0.447"/>
                    <GradientStop Color="#FFF5B4A0" Offset="0.983"/>
                </LinearGradientBrush>
            </ProgressBar.Foreground>
        </ProgressBar>
        <TextBlock x:ConnectionId='5' x:Name="Actionlbl" RelativePanel.Above="Installprog" RelativePanel.AlignHorizontalCenterWithPanel="True"  Text="status" FontSize="18.667" FontWeight="Bold" FontFamily="Incised901 Nd BT"/>
        <ListView x:ConnectionId='6' x:Name="Realinstall" RelativePanel.AlignBottomWith="Actionlbl" RelativePanel.AlignLeftWithPanel="True" RelativePanel.AlignRightWithPanel="True" RelativePanel.AlignTopWithPanel="True" Margin="10,10,10,30" Background="#FFF55D5D" Visibility="Collapsed"/>
        <MediaElement x:ConnectionId='7' x:Name="installermusic" AutoPlay="True" IsLooping="True" AudioCategory="Media"></MediaElement>
    </RelativePanel>
</Page>

